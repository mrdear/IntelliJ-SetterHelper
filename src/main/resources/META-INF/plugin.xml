<idea-plugin>
    <id>cn.mrdear.setter.SetterHelper</id>
    <name>SetterHepler</name>
    <vendor email="niudear@foxmail.com" url="https://mrdear.cn">屈定</vendor>

    <description><![CDATA[
        The function of this plugin is to automatically map and copy the same fields of the two objects in Java and other languages, which can be compared to the role of mapstruct in Java. <br/>
        this plugin use support get and set ,lombok builder and this.xxx = dto.getxxx(). <br/>
        more example: <a href="https://github.com/mrdear/SetterHelperExample">https://github.com/mrdear/SetterHelperExample</a>
    ]]></description>

    <change-notes>Initial release of the plugin.</change-notes>

    <!-- please see https://plugins.jetbrains.com/docs/intellij/plugin-compatibility.html
         on how to target different products -->
    <depends>com.intellij.modules.platform</depends>
    <depends>com.intellij.java</depends>
    <depends>com.intellij.modules.lang</depends>

    <extensions defaultExtensionNs="com.intellij">
        <!-- Add your extensions here -->
    </extensions>

    <actions>
        <!-- Add your actions here -->
        <action id="SetterConvertGenerate" class="cn.mrdear.setter.action.SetterConvertGenerateActionGroup"
                text="Setter Convert" description="POJO转换插件功能集">
            <add-to-group group-id="GenerateGroup" anchor="first"/>
        </action>
    </actions>
</idea-plugin>